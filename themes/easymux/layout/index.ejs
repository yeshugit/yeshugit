                    <div class="column is-8">
                        <h2 class="title is-4">Latest Posts</h2>
                        <div class="columns is-multiline">
                          <% page.posts.each(function(post){%>
                            <div class="column is-full-mobile is-half-tablet is-one-third-widescreen">
                                <div class="card">
                                    <div class="card-image">
                                        <figure class="image is-5by3">
                                          <a href="<%- url_for(post.path) %>">
                                            <img src="<%- url_for(post.featured_img) || url_for(theme.featured_img) %>" alt="Image" />
                                          </a>
                                        </figure>
                                    </div>
                                    <div class="card-content">
                                        <h3 class="title is-5">
                                          <a href="<%- url_for(post.path) %>">
                                            <%- post.title %>
                                          </a>
                                          </h3>
                                        <P>
                                          By <%- config.author %> on 
                                          <%- date(post.date,config.date_format) %>
                                          
                                        </P>
                                        <% if(post.excerpt){%>
                                        <p class="subtitle is-6">
                                          <%- strip_html(post.excerpt) %>
                                        </p>
                                        <%} %>
                                        <a
                                            href="<%- url_for(post.path) %>"
                                            class="button is-small is-primary"
                                            >Read Lyrics</a
                                        >
                                    </div>
                                </div>
                            </div>
                          <%}) %>
                        </div>
                        
                        <%- partial('pagination/pagination-simple') %>
                        
                    </div>