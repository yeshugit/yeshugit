<%
  var title = page.title || config.title;
  
  if(is_archive()){
    title = __('archive');
    
    if(is_month()){
      title += ': ' + page.month + '/' + page.year;
    }else if(is_year()){
      title += ': ' + page.year;
    }
  } else if(is_category()){
    title = __('category') + ': ' + page.category;
  }else if(is_tag()){
    title = __('tag') + ': ' + page.tag;
  }
  
  var description = config.description;
  
  if(page.description){
    description = page.description
  } else if(page.excerpt){
    description = strip_html(page.excerpt)
    //description = page.excerpt.replace(/<[^>]*>/g,'')
  } else{
    description = config.description
  }
  
  description = description.substring(0,160).trim()
%>
  <head>
    <%- partial('meta/html',{title: title}) %>
    <%- partial('meta/seo',{description: description}) %>
    <%- partial('meta/opengraph',{title: title, description: description}) %>
    <%- partial('meta/twitter',{title: title, description: description}) %>
    
  </head>  
   