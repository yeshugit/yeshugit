<% if(theme.about.insert === 'before'){ %>
	<%- partial(theme.layout.about_card) %>
	<%- page.content %>
<% } %>

<% if(theme.about.insert === 'none'){ %>
	<%- page.content ? page.content : partial(theme.layout.about_card) %>
<% } %>

<% if(theme.about.insert === 'after'){ %>
	<%- page.content %>
	<%- partial(theme.layout.about_card) %>
<% } %>

<% if(page.comments) { %>
    <%- partial(theme.layout.comment) %>
<% } %>