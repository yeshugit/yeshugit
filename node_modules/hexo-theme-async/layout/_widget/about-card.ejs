<%
let index = 0; 
%>

<% if(theme.about.title) { %>
<div class="row trm-scroll-animation" style="margin-bottom: var(--card-bottom-card);">
	<div class="col-lg-12">
			<blockquote>
					<%- theme.about.title %>
			</blockquote>
	</div>
</div>
<% } %>

<% if(theme.about.introduction) { %>
<div class="row trm-scroll-animation" >
	<div class="col-lg-12">
			<h5 class="trm-title-with-divider">
					<%- __('title.author') %>
					<span data-number="0<%- ++index %>"></span>
			</h5>
			<div class="trm-card trm-contrast trm-active-el" >
					<%- theme.about.introduction %>
			</div>
	</div>
</div>
<% } %>

<% if(theme.about.blog) { %>
